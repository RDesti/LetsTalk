<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppMainTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- For registration activity -->
    <style name="textView_registration">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="textView_error">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red_color</item>
    </style>

    <style name="editText_registration">
        <item name="android:layout_marginTop">-6dp</item>
        <item name="android:layout_marginBottom">-6dp</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:gravity">start</item>
        <item name="singleLine">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/teal_700</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>